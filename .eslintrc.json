{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 14,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "react-hooks",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "react/jsx-filename-extension":["warn",{"extensions":[".tsx"]} ],
        "import/extensions":[
            "error",
            "ignorePackages",
            {
              "ts":"never",
              "tsx":"never"
            }
        ],
        "react-hooks/rules-of-hooks":"error",
        "react-hooks/exhaustive-deps":"warn"
    },
    "settings":{
        "import/resolver":{
          "typescript":{}
        }
    }
}
